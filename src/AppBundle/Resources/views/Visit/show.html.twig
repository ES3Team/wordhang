{% extends '::base.html.twig' %}

{% block title -%}{% trans %}visit.visit{% endtrans %}{% endblock %}

{% block body -%}
    <h1>{% trans %}visit.visit{% endtrans %}</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('d.m.Y') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('owner_show',{'id': entity.pet.owner.id}) }}">
            <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
            {% trans %}back.to.owner{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('visit_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> {% trans %}edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
